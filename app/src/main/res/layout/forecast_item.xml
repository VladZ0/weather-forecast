<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/forecast_image_view"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_forecast_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center" />


        <TextView
            android:id="@+id/tv_forecast_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_data_mt"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_data_mt"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/black"
            android:text="Humidity:  25" />

        <TextView
            android:id="@+id/tv_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_data_mt"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/black"
            android:text="Pressure:  1015" />

        <TextView
            android:id="@+id/tv_wind_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_data_mt"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/black"
            android:text="Wind speed:  2.63 m/s" />

        <TextView
            android:id="@+id/tv_wind_gust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_data_mt"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/black"
            android:text="Wind gust:  4.12 m/s" />

        <TextView
            android:id="@+id/tv_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_data_mt"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="@color/black"
            android:text="Visibility:  10000" />

    </LinearLayout>


</androidx.cardview.widget.CardView>